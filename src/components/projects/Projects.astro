---
import type { Params, Projects } from "../../pages/[...slug].astro"
import Project from "./Project.astro"

type Props = {
  projects: Projects
}

const { projects } = Astro.props

const { slug: language } = Astro.params as Params

let introduction = language === "en" ? "Projects" : "Proyectos"
---

<main>
  <h2 class="text-2xl font-bold mt-7 text-neutral text-center sm:text-left">
    {introduction}
  </h2>
  <ul class="mt-4 space-y-6">
    {projects?.map((project) => <Project {...project} />)}
  </ul>
</main>
