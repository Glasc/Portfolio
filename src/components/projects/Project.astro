---
import { Image } from "astro:assets"

type Props = {
  title: string
  technologies: string[]
  body: string
  link: string
  cover: ImageMetadata
  coverAlt: string
}

const props = Astro.props
---

<li
  class="shadow border-primary/20 bg-gradient-to-l from-base-100 to-base-200 rounded-2xl cursor-pointer hover:border-accent/50 transition-all duration-300 transform-gpu hover:-translate-y-1 ease-out group overflow-hidden"
>
  <a href={props.link} class="flex space-x-5" target="_blank">
    <Image
      class="w-full max-w-[14rem] object-cover rounded-md"
      src={props.cover}
      alt={props.coverAlt}
      format="webp"
    />

    <section class="w-full p-6">
      <div class="flex flex-col h-full justify-between">
        <div>
          <h3 class="text-neutral group-hover:text-accent font-bold uppercase text-xl">
            {props.title}
          </h3>
          <p
            class="text-base-content text-base mt-1 text-justify leading-relaxed"
          >
            {props.body}
          </p>
        </div>
        <div class="mt-5 flex flex-wrap font-medium space-x-2">
          {
            props.technologies.map((technology) => {
              return (
                <span class="badge badge-primary badge-outline group-hover:text-accent group-hover:font-medium">
                  {technology}
                </span>
              )
            })
          }
        </div>
      </div>
    </section>
  </a>
</li>
