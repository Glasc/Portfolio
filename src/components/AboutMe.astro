---
import type { Introducing, Params } from "../pages/[...slug].astro"

type Props = {
  introducing: Introducing
}

const { introducing } = Astro.props

const { Content } = await introducing.render()

const { slug: language } = Astro.params as Params

const greetingByLanguage = {
  es: "Hola, soy César",
  en: "Hi, I'm César",
}

const greeting = greetingByLanguage[language]
---

<section class="text-xl text-center sm:text-left text-base-content/90 leading-relaxed space-y-2 max-w-3xl w-full mx-auto">
  <h1 class="font-bold text-3xl sm:text-4xl text-neutral lg:text-5xl mt-7 mb-3">
    {greeting}
  </h1>
  <Content />
</section>
