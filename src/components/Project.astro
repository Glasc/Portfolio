---
import { getImage } from "@astrojs/image"

type Props = {
  title: string
  technologies: string[]
  body: string
  link: string
  img_href: string
}

const props = Astro.props

const imageProps = await getImage({
  src: import(`../assets/${props.img_href}.png`),
  format: "webp",
  alt: `${props.title} showcase`,
  width: 700,
})
---

<li
  class="shadow-lg border-primary/20 bg-base-200 rounded-2xl cursor-pointer  hover:border-accent/50 ease-out transition-transform group overflow-hidden"
>
  <a href={props.link} class="flex space-x-5" target="_blank">
    <img {...imageProps} class="w-full max-w-[14rem] object-cover rounded-md" />
    <section class="w-full p-6">
      <div class="flex flex-col h-full justify-between">
        <div>
          <h3 class="group-hover:text-accent font-semibold uppercase text-xl">
            {props.title}
          </h3>
          <p class="text-base-content/80 text-sm mt-2 text-justify leading-relaxed">
            {props.body}
          </p>
        </div>
        <div class="mt-5 flex flex-wrap font-medium space-x-2">
          {
            props.technologies.map((technology) => {
              return (
                <span class="badge badge-primary badge-outline group-hover:text-accent group-hover:font-medium">
                  {technology}
                </span>
              )
            })
          }
        </div>
      </div>
    </section>
  </a>
</li>
