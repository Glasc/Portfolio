---
import { getEntryBySlug } from "astro:content"

const introducing = await getEntryBySlug("introducing", "introducing")
---

<section class="text-lg text-justify">
  <h1 class="font-bold text-2xl sm:text-3xl text-neutral lg:text-5xl mt-7">
    {introducing.data.greeting}
  </h1>
  <div class="space-y-3 mt-3 text-base-content/90">
    {introducing.body}
  </div>
</section>
